{
    "name": "splt",
    "description": "Viewer and Editor for proofreading",
    "version": "1.0.3",
    "icons": {
        "16": "icon16.png",
        "64": "icon64.png",
        "128": "icon128.png"
    },
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/SelectText.js",
                "js/Popup.js"
            ]
        }
    ],
    "permissions": [
        "contextMenus",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],

    "background": {
        "service_worker": "background.js"
    }
}