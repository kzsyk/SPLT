{
    "name": "splt",
    "description": "Viewer and Editor for proofreading",
    "version": "1.0.0",
    "icons": {
        "16": "icon16.png",
        "64": "icon64.png",
        "128": "icon128.png"
    },
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/SelectText.js",
                "js/Popup.js"
            ]
        }
    ],
    "permissions": [
        "<all_urls>",
        "contextMenus",
        "storage"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}